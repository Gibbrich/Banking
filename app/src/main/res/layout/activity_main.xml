<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		<variable
			name="viewModel"
			type="com.github.gibbrich.banking.ViewModel"/>
		
		<import type="android.view.View"/>
		<import type="com.github.gibbrich.banking.model.AccountType"/>
	</data>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="com.github.gibbrich.banking.MainActivity">
		
		<Spinner
			android:id="@+id/idType"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:adapter="@{viewModel.accountType.widget.adapter}"
			android:onItemSelected="@{viewModel.accountTypeHandler.onItemSelected}"
			android:onNothingSelected="@{viewModel.accountTypeHandler.onNothingSelected}"/>
		
		<EditText
			android:id="@+id/cardNumber"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType=""
			android:text="Номер карты"
			android:visibility="@{viewModel.accountTypeHandler.selectedAccountType == AccountType.CARD ? View.VISIBLE : View.GONE}"/>
		
		<EditText
			android:id="@+id/bankId"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="numberDecimal"
			android:text="БИК"
			android:visibility="@{viewModel.accountTypeHandler.selectedAccountType == AccountType.ACCOUNT ? View.VISIBLE : View.GONE}"/>
		
		<EditText
			android:id="@+id/accountNumber"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="numberDecimal"
			android:text="Номер счета"
			android:visibility="@{viewModel.accountTypeHandler.selectedAccountType == AccountType.ACCOUNT ? View.VISIBLE : View.GONE}"/>
		
		<Spinner
			android:id="@+id/paymentType"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="@{viewModel.accountTypeHandler.selectedAccountType == AccountType.ACCOUNT ? View.VISIBLE : View.GONE}"/>
		
		<EditText
			android:id="@+id/lastName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="textPersonName"
			android:text="Фамилия"
			android:visibility="@{viewModel.accountTypeHandler.selectedAccountType == AccountType.ACCOUNT ? View.VISIBLE : View.GONE}"/>
		
		<EditText
			android:id="@+id/firstName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="textPersonName"
			android:text="Имя"
			android:visibility="@{viewModel.accountTypeHandler.selectedAccountType == AccountType.ACCOUNT ? View.VISIBLE : View.GONE}"/>
		
		<EditText
			android:id="@+id/secondName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="textPersonName"
			android:text="Отчество"
			android:visibility="@{viewModel.accountTypeHandler.selectedAccountType == AccountType.ACCOUNT ? View.VISIBLE : View.GONE}"/>
	
	</LinearLayout>

</layout>




