<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		<variable
			name="viewModel"
			type="com.github.gibbrich.banking.ViewModel"/>

		<variable
			name="spinnerAdapter"
			type="android.widget.ArrayAdapter" />
		
		<import type="android.view.View"/>
	</data>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="com.github.gibbrich.banking.MainActivity">
		
		<Spinner
			android:id="@+id/idType"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:adapter="@{spinnerAdapter}"/>
		
		<EditText
			android:id="@+id/cardNumber"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="numberDecimal"
			android:text="Номер карты" />
		
		<EditText
			android:id="@+id/bankId"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="numberDecimal"
			android:text="БИК"
			android:visibility="@{viewModel.MFOFieldVisible? View.VISIBLE : View.GONE}"/>
		
		<EditText
			android:id="@+id/accountNumber"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="numberDecimal"
			android:text="Номер счета" />
		
		<Spinner
			android:id="@+id/paymentType"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		
		<EditText
			android:id="@+id/lastName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="textPersonName"
			android:text="Фамилия" />
		
		<EditText
			android:id="@+id/firstName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="textPersonName"
			android:text="Имя" />
		
		<EditText
			android:id="@+id/secondName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="textPersonName"
			android:text="Отчество" />
	
	</LinearLayout>

</layout>




